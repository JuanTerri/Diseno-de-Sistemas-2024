                            <table class="table table-striped zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Viandas Donadas</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {{#each colaboradorDatos}}
                                    <tr>
                                        <th>{{this.nombre}}</th>
                                        <td>{{this.apellido}}</td>
                                        <td>{{this.donacion}}</td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                </div>
            </div>

        </div>
        <!--**********************************
            Content body end
        ***********************************-->
        
        
