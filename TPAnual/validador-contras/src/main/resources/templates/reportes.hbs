                            <table class="table table-striped zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Heladera</th>
                                        <th>Fallas</th>
                                        <th>Viandas Colocadas</th>
                                        <th>Viandas Retiradas</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {{#each helaFallos}}
