        <div class="content-body">
            
            <div style="display: flex;">
                <div class="col-lg-6" style="margin-top: 15px;">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Nueva Donación</h4>
                            <div class="basic-form">
                                <form action="/dinero" method="post" id="donationForm">
                                    <div class="form-group">
                                        <label>Monto de dinero a donar</label>
                                        <input type="number" min="1" name="monto" class="form-control" placeholder="Monto en ARS" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Tipo de tarjeta</label>
                                        <select name="tipoTarjeta" class="form-control" required>
                                            <option selected disabled value="">Elige...</option>
                                            <option value="Visa">Visa</option>
                                            <option value="MasterCard">MasterCard</option>
                                            <option value="Amex">Amex</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Número de tarjeta</label>
                                        <input type="text" name="numTarjeta" class="form-control" placeholder="Número de tarjeta" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Nombre del titular</label>
                                        <input type="text" name="nombreTitular" class="form-control" placeholder="Nombre del titular" required>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label>Fecha de vencimiento</label>
                                            <input type="month" name="mesVencimiento" class="form-control" placeholder="MM-YY" required>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Código de seguridad</label>
                                            <input type="text" name="codSeguridad" class="form-control" placeholder="Código CVV" required>
                                        </div>
                                    </div>
                                    <div style="display: flex;">
                                        <div class="form-group">
                                            <label>Tipo de donación</label>
                                            <div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="tipo" id="oneTime" value="unica" required>
                                                    <label class="form-check-label" for="oneTime">Única</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="tipo" id="recurring" value="recurrente" required>
                                                    <label class="form-check-label" for="recurring">Recurrente</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group" id="recurrenceFrequency" style="display:none; margin-left: 30px;">
                                            <label>Frecuencia de la recurrencia</label>
                                            <div class="d-flex justify-content-end">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="recurrencia" id="weekly" value="semanal">
                                                    <label class="form-check-label" for="weekly">Semanal</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="recurrencia" id="monthly" value="mensual">
                                                    <label class="form-check-label" for="monthly">Mensual</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="recurrencia" id="yearly" value="anual">
                                                    <label class="form-check-label" for="yearly">Anual</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success">Donar</button>
                                </form>
                            </div>
