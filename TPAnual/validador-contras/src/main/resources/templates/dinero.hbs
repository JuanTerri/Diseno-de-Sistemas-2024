    <script>
        document.querySelectorAll('input[name="tipo"]').forEach((elem) => {
            elem.addEventListener("change", function(event) {
                const frequencyDiv = document.getElementById("recurrenceFrequency");
                if (event.target.value === "recurrente") {
                    frequencyDiv.style.display = "block";
                } else {
                    frequencyDiv.style.display = "none";
                }
            });
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const oneTimeRadio = document.getElementById('oneTime');
            const recurringRadio = document.getElementById('recurring');
            const recurrenceFrequency = document.getElementById('recurrenceFrequency');
            const recurrenceRadios = document.querySelectorAll('input[name="recurrencia"]');

            function toggleRecurrence() {
                if (recurringRadio.checked) {
                    recurrenceFrequency.style.display = 'block';
                    recurrenceRadios.forEach(radio => radio.setAttribute('required', true));
                } else {
                    recurrenceFrequency.style.display = 'none';
                    recurrenceRadios.forEach(radio => radio.removeAttribute('required'));
                }
            }

            oneTimeRadio.addEventListener('change', toggleRecurrence);
            recurringRadio.addEventListener('change', toggleRecurrence);

            toggleRecurrence();
        });
    </script>

